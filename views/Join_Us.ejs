<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join Us</title>
    <link rel="stylesheet" href="/assets/css/join_us.css">
    <link rel="stylesheet" href="/assets/css/index.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" href="/assets/images/icons/favicon.ico " type="image/x-icon" />
</head>

<body>
    <%-include("./Components/Header.ejs") %>

    <div class="join-page">
        <div class="join-container">
            <form action="/join-us" method="POST" class="join-details">
                <h1>Welcome to REB Solutions</h1>
                <%-include('./Components/Flash.ejs') %>
                <div class="line"></div>
                <input type="text" id="user-name" placeholder="Full Name" name="FullName" />
                <input type="text" placeholder="Contact Number" name="ContactNumber" />
                <input type="email" id="user-email" placeholder="Email" name="Email" />
                <textarea name="message" id="join-msg" cols="30" rows="3" placeholder="Message"></textarea>
                <button type="submit" id="join-btn">Join Us</button>
            </form>
            <div class="join-illus">
                <img src="/assets/images/svgs/login-illus.svg" alt="">
            </div>
        </div>
    </div>

    <%-include("./Components/Footer.ejs") %>
    <script src="/assets/scripts/index.js"></script>
</body>

</html>